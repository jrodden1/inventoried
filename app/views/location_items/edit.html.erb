      {url: location_path(@location), name: @location.name},
      {url: location_item_path(@location, @location_item), name: @location_item.item_name},
      {url: edit_location_item_path(@location, @location_item), name: "Edit"}
      ]
   } 
%><br>

<div class="container">
   <div class="container">
      <%= render partial: "location_item", locals: {item: @item, url: location_item_path(@location, @location_item), location_item: @location_item} %>
   </div>
