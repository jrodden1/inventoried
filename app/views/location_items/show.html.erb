<%= render partial: "layouts/breadcrumbs", locals: {
   breadcrumbs: [
      {url: locations_path, name: "Locations"}, 
      {url: location_path(@location), name: @location.name},
      {url: location_item_path(@location, @item), name: @item.name},
      {url: location_item_path(@location, @item), name: "Stock"}
      ]
   } 
%>
<h3 class="center">Item Detail for: <%= @item.name %></h3>
<% if @item.description.present? %>
   <div style="padding: 1%; border: 2px;">
      <h5 class="center"><b>Description:</b></h5>
      <p class="center"><%= @item.description %></p>
   </div>
<% end %>   

<h5 class="center">Quantity in Stock at <%= @location.name %>:<br><br> <b><em><%= @location_item.quantity %></em></b></h5>
<br>
<div class="center">
<%= link_to  "Items List for #{@location.name}", location_items_path(@location), class: "btn brown darken-1" %>
<%= link_to  "Delete Item", delete_location_item_path(@location, @item), method: :delete, data: {confirm: "Are you sure you want to delete all stock of this item from this location?"}, class: "btn red darken-1" %>
</div>